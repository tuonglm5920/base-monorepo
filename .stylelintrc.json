{
  "ignoreFiles": ["**/*"],
  "overrides": [
    {
      "files": ["**/*.css"],
      "extends": ["stylelint-config-standard"],
      "rules": {}
    }
  ],
  "extends": "stylelint-config-recommended",
  "plugins": ["stylelint-order"],
  "rules": {
    "selector-class-pattern": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "order/order": [
      "dollar-variables",
      "custom-properties",
      "at-rules",
      "declarations",
      "rules"
    ],
    "order/properties-order": []
  }
}
